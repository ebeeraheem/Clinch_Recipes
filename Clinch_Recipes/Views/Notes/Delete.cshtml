@model Note

<h1>Delete note</h1>

<form asp-action="Delete" method="post">
    <div class="form-group mb-2">
        <label asp-for="Title" class="control-label">Title:</label>
        <input asp-for="Title" class="form-control ps-1" disabled />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Content" class="control-label">Content:</label>
        <textarea asp-for="Content" class="form-control ps-1" disabled></textarea>
    </div>

    <div class="form-group d-flex col-md-6 mt-2 gap-3">
        <button type="submit" class="btn btn-danger w-50">Delete Note</button>

        <a class="btn btn-outline-primary w-50" asp-controller="Notes" asp-action="Index">Back To All Notes</a>
    </div>
</form>
