@model PagedResult<Note>
@inject UserHelper UserHelper

<div class="header-container">
    <h1>All notes</h1>

    @if (!UserHelper.IsAuthenticated())
    {
        <a asp-controller="Account" asp-action="Login">Login</a>
    }
    else
    {
        @* <a asp-controller="Account" asp-action="Logout">Logout</a> *@
        <form asp-controller="Account"
              asp-action="Logout"
              method="post"
              class="d-inline">
            <button type="submit" class="btn btn-primary logout">
                Logout
            </button>
        </form>
    }
</div>

<div class="input-group mb-3 searchNotes">
    <input type="search" autofocus class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon"/>
    <button type="button" class="btn btn-outline-primary">search</button>
</div>

<!--Show 'Add New Note' button if user is authenticated-->
@if (UserHelper.IsAuthenticated())
{
    <a asp-controller="Notes" asp-action="Upsert" class="btn btn-primary takeNote">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2" />
        </svg>
        Add New Note
    </a>
}

<div class="container">
    <div class="row row-cols-2 row-cols-md-4 g-2" id="notes-container">
        @foreach (var note in Model.Items)
        {
            <div class="col note-item" data-title="@note.Title">
                <a class="noteItem" data-id="@note.Id" asp-controller="Notes" asp-action="Details" asp-route-id="@note.Id">
                    <h4>@note.Title</h4>
                    <h6 class="note-date" data-utc-date="@note.LastUpdatedDate.ToString("o")"></h6>
                    <h6 class="note-date created-date" data-utc-date="@note.CreatedDate.ToString("o")" style="display:none;">@note.CreatedDate</h6>
                    <p style ="display:none;">@note.Content</p>
                </a>
            </div>
        }
    </div>

    <div class="text-center">
        <button id="load-more" class="btn btn-primary">Load more</button>
    </div>

    <div class="load-more-spinner">
        <div class="loader">
            <div class="circle" id="a"></div>
            <div class="circle" id="b"></div>
            <div class="circle" id="c"></div>
        </div>
    </div>

    <hr />

</div>


@{
    <script src="~/js/notes-index.js"></script>

    <style>
        #load-more {
            color: #02182b;
            background-color: #edf7f6;
            border: 1px solid #b5f8fe99;
            padding: clamp(6px, 1vw, 8px) clamp(12px, 2vw, 16px);
            width: 100%;
            max-width: 150px;
            transition: all 0.3s ease;
            margin-block: 16px;
            font-weight: bold;
            display: inline-block;
        }

            #load-more:hover {
                color: #edf7f6;
                border-color: #b5f8fe;
                background-color: #b5f8fe22;
            }

        hr {
            margin-block: 36px;
            border: 1px solid #b5f8fe99;
            opacity: .5;
            display: none;
        }

        .load-more-spinner {
            display: none;
            max-width: max-content;
            flex-direction: column;
            margin: auto;
        }

        .loader {
            width: 180px;
            height: 20px;
            margin: 30px auto 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .circle {
            width: 10px;
            height: 10px;
            background: white;
            border-radius: 50%;
            margin: 0 5px;
            animation: jump 1s linear infinite;
        }

        @@keyframes jump {
            0% {
                margin-top: 0;
            }

            35% {
                margin-top: -25px;
            }

            70% {
                margin-top: 0px;
            }
        }


        #b {
            animation-delay: 0.1s;
        }

        #c {
            animation-delay: 0.2s;
        }

        /* Header section container */
        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: clamp(1rem, 2vw, 2rem);
            margin-bottom: clamp(1rem, 3vw, 2rem);
        }
        /* Header styles */
        h1 {
            font-size: 2.5rem;
            border-bottom: 2px solid #b5f8fe99;
            padding-bottom: 0.5rem;
        }

        /* Login/Logout link styles */
        a[href^="/Account"], button.logout {
            display: inline-block;
            padding: clamp(6px, 1vw, 8px) clamp(12px, 2vw, 16px);
            text-decoration: none;
            color: #edf7f6;
            border: 1px solid #b5f8fe99;
            border-radius: 4px;
            transition: all 0.3s ease;
            font-size: clamp(0.9rem, 1.5vw, 1rem);
        }

            a[href^="/Account"]:hover, button.logout:hover {
                background-color: #b5f8fe22;
            }

        /* Search section styles */
        .searchNotes {
            display: flex;
            margin: 0 auto;
            flex-wrap: nowrap;
        }

            .searchNotes input[type="search"] {
                flex: 1 1 250px;
                padding: 10px 15px;
                border: 1px solid #b5f8fe99;
                border-radius: 4px;
                background-color: #02182b;
                color: #edf7f6;
                font-size: clamp(0.9rem, 1.5vw, 1rem);
                min-width: 0; /* Prevents flex items from overflowing */
                border-top-right-radius: 0 !important;
                border-bottom-right-radius: 0 !important;
            }

                .searchNotes input[type="search"]::placeholder {
                    color: #edf7f699;
                }

                .searchNotes input[type="search"]:focus {
                    outline: none;
                    border-color: #b5f8fe;
                    box-shadow: 0 0 5px #b5f8fe66;
                }

            .searchNotes button {
                flex: 0 1 auto;
                padding: 10px 20px;
                background-color: transparent;
                color: #edf7f6;
                border: 1px solid #b5f8fe99;
                border-radius: 4px;
                cursor: pointer;
                transition: all 0.3s ease;
                min-width: max-content;
            }

                .searchNotes button:hover {
                    background-color: #b5f8fe22;
                }

            .noteItem{
                display: block;
                color: #edf7f6dd;
                padding: 0.75em 0.35em;
                padding-block-end: 3em;
                border: 1px solid #b5f8fe99;
                border-radius: 10px;
                text-decoration: none;
                position: relative;
            }

            .noteItem:hover {
                    color: #edf7f6dd;
                    background-color: #b5f8fe22;
            }

                .noteItem h4{
                    font-weight:700;
                    font-size: 90%;
                }

            .noteItem h6{
                    font-size: 80%;
                    position: absolute;
                bottom: 5px;
            }

        .note-item{
            display:grid;
        }

            .takeNote {
                background-color: #b5f8fe;
                border-color: #b5f8fe;
                color: #02182b;
                padding-block: 0.7em;
                position: fixed;
                border-radius: 50px;
                bottom: calc(0vh + 20px);
                left: 50%;
                transform: translateX(-50%);
                z-index: 1000;
            }
            .takeNote:hover{
                    border-color: #b5f8fe;
                    background-color: #02182b;
                    color: #b5f8fe;
            }
            .takeNote svg{
                vertical-align: sub;
            }
        </style>
}