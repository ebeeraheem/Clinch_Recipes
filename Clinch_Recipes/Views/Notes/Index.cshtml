        }

            a[href^="/Account"]:hover {
                background-color: #b5f8fe22;
            }

        /* Search section styles */
        .searchNotes {
            display: flex;
            margin: 0 auto;
            flex-wrap: nowrap;
        }

            .searchNotes input[type="search"] {
                flex: 1 1 250px;
                padding: 10px 15px;
                border: 1px solid #b5f8fe99;
                border-radius: 4px;
                background-color: #02182b;
                color: #edf7f6;
                font-size: clamp(0.9rem, 1.5vw, 1rem);
                min-width: 0; /* Prevents flex items from overflowing */
                border-top-right-radius: 0 !important;
                border-bottom-right-radius: 0 !important;
            }

                .searchNotes input[type="search"]::placeholder {
                    color: #edf7f699;
                }

                .searchNotes input[type="search"]:focus {
                    outline: none;
                    border-color: #b5f8fe;
                    box-shadow: 0 0 5px #b5f8fe66;
                }

            .searchNotes button {
