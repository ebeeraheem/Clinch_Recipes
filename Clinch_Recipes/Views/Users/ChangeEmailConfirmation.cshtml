@model bool
@{
    ViewData["Title"] = "Email Change Confirmation";
}

<div class="change-email-container">
    <div class="container">
        <div class="change-email-header">
            <h1><i class="fas fa-envelope-open-text text-primary me-3"></i>Email Change Confirmation</h1>
            <p>
                @if (Model)
                {
                    <span>Your email address has been successfully changed.</span>
                }
                else
                {
                    <span>Sorry, we could not confirm your email change. The link may be invalid or expired.</span>
                }
            </p>
        </div>
        <div class="form-card" style="text-align:center;">
            @if (Model)
            {
                <div class="alert alert-success" style="font-size:1.1rem;">
                    <i class="fas fa-check-circle me-2" style="color:#28a745;"></i>
                    You can now use your new email to log in.
                </div>
            }
            else
            {
                <div class="alert alert-danger" style="font-size:1.1rem;">
                    <i class="fas fa-times-circle me-2" style="color:#dc3545;"></i>
                    Email change confirmation failed.
                </div>
            }
            <a href="/Account/Login" class="btn btn-primary mt-3">
                <i class="fas fa-sign-in-alt me-2"></i>Back to Login
            </a>
        </div>
    </div>
</div>

<style>
    .change-email-container {
        background: var(--bg-primary);
        min-height: calc(100vh - 76px);
        padding: 2rem 0;
    }

    .change-email-header {
        background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
        border: 1px solid var(--border-primary);
        border-radius: 8px;
        padding: 2rem;
        margin-bottom: 2rem;
        text-align: center;
    }

        .change-email-header h1 {
            color: var(--text-primary);
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .change-email-header p {
            color: var(--text-secondary);
            font-size: 1.1rem;
        }

    .form-card {
        background: var(--bg-tertiary);
        border: 1px solid var(--border-primary);
        border-radius: 12px;
        padding: 2.5rem;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
        max-width: 600px;
        margin: 0 auto;
    }

    .alert-success {
        background: rgba(40, 167, 69, 0.1);
        border: 1px solid #28a745;
        color: #28a745;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
    }

    .alert-danger {
        background: rgba(220, 53, 69, 0.1);
        border: 1px solid #dc3545;
        color: #dc3545;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--accent-secondary), var(--accent-primary));
        color: white;
        padding: 1rem 2rem;
        border: none;
        border-radius: 6px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .btn-primary:hover {
            box-shadow: 0 8px 25px rgba(88, 166, 255, 0.3);
        }

    @@media (max-width: 768px) {
        .form-card

    {
        padding: 1.5rem;
        margin: 0 1rem;
    }

    .change-email-header {
        padding: 1.5rem;
    }

        .change-email-header h1 {
            font-size: 2rem;
        }

    }
</style>
